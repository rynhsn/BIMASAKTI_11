    </R_ItemLayout>
    <R_ItemLayout col="6">
        <R_TextBox @bind-Value="_viewModel.Data.CGLACCOUNT_NAME"
                   R_ConductorSource="_conductorRef"
                   CharacterCasing="R_eCharacterCasing.Upper"
                   Enabled="false"/>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row Class="mb-1">
    <R_ItemLayout col="2">
        <R_Label>Center</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="2">
