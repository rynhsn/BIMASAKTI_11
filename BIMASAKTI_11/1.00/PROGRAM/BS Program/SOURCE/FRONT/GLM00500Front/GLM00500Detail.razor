</R_StackLayout>

<R_StackLayout Row Class="mb-1">
    <R_ItemLayout col="5">
        <R_StackLayout Row>
            <R_ItemLayout col="5">
                <R_Label>Budget</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="5">
                <R_NumericTextBox @ref="FieldBudget"
                                  @bind-Value="_viewModel.Data.NBUDGET"
                                  R_ConductorSource="_conductorRef"
                                  R_EnableAdd
                                  R_EnableEdit/>
            </R_ItemLayout>
        </R_StackLayout>
    </R_ItemLayout>
    <R_ItemLayout col="6">
        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_Label>Rounding Method</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="7">
