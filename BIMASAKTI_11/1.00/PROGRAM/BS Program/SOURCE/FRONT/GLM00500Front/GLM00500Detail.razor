            </R_ItemLayout>
            <R_ItemLayout>
                <R_Button @ref="BtnCalculate" R_ConductorSource="_conductorRef" R_EnableAdd R_EnableEdit OnClick="Calcuate">Calculate</R_Button>
            </R_ItemLayout>
        </R_StackLayout>
    </R_ItemLayout>

</R_StackLayout>

<R_StackLayout>
