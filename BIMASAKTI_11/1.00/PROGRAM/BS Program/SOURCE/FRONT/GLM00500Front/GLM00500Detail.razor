</R_StackLayout>

<R_StackLayout Row Class="mb-1">
    <R_ItemLayout col="2">
        <R_Label>Input Method</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="10">
        <R_RadioGroup Data="@_viewModel.CINPUT_METHOD"
                      @bind-Value="_viewModel.Data.CINPUT_METHOD"
                      ValueField="Key"
                      TextField="Value"
                      R_ConductorSource="@_conductorRef"
