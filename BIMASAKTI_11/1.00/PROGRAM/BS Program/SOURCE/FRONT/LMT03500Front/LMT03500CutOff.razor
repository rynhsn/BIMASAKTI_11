@page "/LMT03500CutOff"
@using LMT03500Common.DTOs
@using LMT03500FrontResources
@using R_BlazorFrontEnd.Interfaces
@inherits R_Page
@inject R_ILocalizer<Resources_Dummy_Class> _localizer


<R_StackLayout Row>
    <R_ItemLayout col="2">
        <R_Grid @ref="_gridRefBuilding"
                DataSource="_viewModel.GridBuildingList"
                R_ConductorSource="_conductorRef"
                R_GridType="R_eGridType.Navigator"
                R_ServiceGetListRecord="GetBuildingListRecord"
                Width="100%"
                Height="485px">
            <R_GridColumns>
                <R_GridTextColumn FieldName="@nameof(LMT03500BuildingDTO.CBUILDING_NAME)" HeaderText="@_localizer["LBL_BUILDING"]" TextAlignment="R_eTextAlignment.Left"/>
            </R_GridColumns>
        </R_Grid>
        
        <R_Conductor @ref="@_conductorRef"
                     R_IsHeader
                     R_ViewModel="_viewModel"
                     R_ServiceGetRecord="@GetBuildingRecord"/>
    </R_ItemLayout>
    <R_ItemLayout col="10" Class="ms-2">
        <R_StackLayout Row Class="mb-2">
            <R_ItemLayout col="5">
                <R_StackLayout Row Class="mb-1">
                    <R_ItemLayout col="4">
                        <R_Label>@(_localizer["LBL_UTILITYTYPE"] + "*")</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="5">
                        <R_ComboBox Data="@_viewModel.UtilityTypeList"
                                    Value="_viewModel.UtilityTypeId"
                                    ValueField="@nameof(LMT03500FunctDTO.CCODE)"
                                    TextField="@nameof(LMT03500FunctDTO.CDESCRIPTION)"
                                    Enabled="true"
                                    ValueChanged="@((string value) => OnChangeParam(value, eParamType.UtilityType))"/>
                    </R_ItemLayout>
                </R_StackLayout>
                <R_StackLayout Row Class="mb-1">
                    <R_ItemLayout col="4">
                        <R_Label>@(_localizer["LBL_FLOOR"])</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="5" Class="me-1">
                        <R_ComboBox Data="@_viewModel.FloorList"
                                    Value="_viewModel.FloorId"
                                    ValueField="@nameof(LMT03500FloorDTO.CFLOOR_ID)"
                                    TextField="@nameof(LMT03500FloorDTO.CFLOOR_NAME)"
                                    Enabled="@(!_viewModel.AllFloor)"
                                    ValueChanged="@((string value) => OnChangeParam(value, eParamType.Floor))"/>
                    </R_ItemLayout>
                    <R_ItemLayout>
                        <R_CheckBox @bind-Value="@_viewModel.AllFloor"
                                    Enabled="true"/>
                    </R_ItemLayout>
                    <R_ItemLayout col="2">
                        <R_Label>@_localizer["LBL_ALLFLOOR"]</R_Label>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>
            <R_ItemLayout col="4">
                <R_StackLayout Row Class="mb-1">
                    <R_ItemLayout col="5">
                        <R_Label>@(_localizer["LBL_UTILITYPERIOD"] + "*")</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="3">
                        <R_ComboBox Data="@_viewModel.UtilityYearList"
                                    Value="_viewModel.UtilityPeriodYear"
                                    ValueField="@nameof(LMT03500YearDTO.CYEAR)"
                                    TextField="@nameof(LMT03500YearDTO.CYEAR)"
                                    Enabled
                                    ValueChanged="@((string value) => OnChangeParam(value, eParamType.UtilityYear))"/>
                    </R_ItemLayout>
                    <R_ItemLayout col="2" Class="pe-1">
                        <R_ComboBox Data="@_viewModel.UtilityPeriodList"
                                    Value="_viewModel.UtilityPeriodNo"
                                    ValueField="@nameof(LMT03500PeriodDTO.CPERIOD_NO)"
                                    TextField="@nameof(LMT03500PeriodDTO.CPERIOD_NO)"
                                    Enabled
                                    ValueChanged="@((string value) => OnChangeParam(value, eParamType.UtilityPeriod))"/>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_StackLayout Class="align-items-end">
                    <R_ItemLayout>
                        <R_Button OnClick="OnClickRefresh" Enabled="@(_viewModel.GridBuildingList.Count != 0)">@_localizer["LBL_REFRESH"]</R_Button>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>
        </R_StackLayout>
        
        <R_StackLayout Class="mb-2">
            <R_ItemLayout Class="@_display">
                <R_Label FontColor="R_eFontColor.Success" FontStyle="R_eFontStyle.Bold">@_dataLabel</R_Label>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout>
            <R_ItemLayout Class="@_display">
                <R_Grid @ref="_gridRefUtility"
                        DataSource="_viewModel.GridUtilityUsageList"
                        Pageable
                        PageSize="12"
                        R_ConductorGridSource="_conductorRefUtility"
                        R_GridType="R_eGridType.Batch"
                        R_ServiceGetListRecord="GetUtilityListRecord"
                        AllowDeleteRow="false"
                        AllowEditRow="false"
                        AllowAddNewRow="false"
                        Width="100%"
                        Height="330px"
                        R_ServiceGetRecord="@GetUtilityRecord">
                    <R_GridColumns>
                        <R_GridCheckBoxSelectColumn FieldName="@nameof(LMT03500UtilityUsageDTO.LSELECTED)" Width="30px" ShowSelectAllHeader Filterable="false" Resizable="false"/>
                        <R_GridTextColumn FieldName="@nameof(LMT03500UtilityUsageDTO.CFLOOR_ID)" HeaderText="@_localizer["LBL_FLOORID"]" TextAlignment="R_eTextAlignment.Left" Width="150px"/>
                        <R_GridTextColumn FieldName="@nameof(LMT03500UtilityUsageDTO.CUNIT_ID)" HeaderText="@_localizer["LBL_UNITID"]" TextAlignment="R_eTextAlignment.Left" Width="150px"/>
                        <R_GridTextColumn FieldName="@nameof(LMT03500UtilityUsageDTO.CMETER_NO)" HeaderText="@_localizer["LBL_METERNO"]" TextAlignment="R_eTextAlignment.Left" Width="150px"/>
                        <R_GridTextColumn FieldName="@nameof(LMT03500UtilityUsageDTO.CUTILITY_PRD)" HeaderText="@_localizer["LBL_UTILITYPERIOD"]" TextAlignment="R_eTextAlignment.Left" Width="150px"/>
                        <R_GridDatePickerColumn FieldName="@nameof(LMT03500UtilityUsageDTO.DSTART_DATE)" HeaderText="@_localizer["LBL_STARTDATE"]" Width="150px"/>
                        <R_GridDatePickerColumn FieldName="@nameof(LMT03500UtilityUsageDTO.DEND_DATE)" HeaderText="@_localizer["LBL_ENDDATE"]" Width="150px"/>
                            
                        <R_GridNumericColumn FieldName="@nameof(LMT03500UtilityUsageDTO.IBLOCK1_START)" HeaderText="@_localizer["LBL_BLOCK1START"]" Width="150px" Visible="@_visibleColumnEC"/>
                        <R_GridNumericColumn FieldName="@nameof(LMT03500UtilityUsageDTO.IBLOCK2_START)" HeaderText="@_localizer["LBL_BLOCK2START"]" Width="150px" Visible="@_visibleColumnEC"/>
                        <R_GridNumericColumn FieldName="@nameof(LMT03500UtilityUsageDTO.IBLOCK1_END)" HeaderText="@_localizer["LBL_BLOCK1END"]" Width="150px" Visible="@_visibleColumnEC"/>
                        <R_GridNumericColumn FieldName="@nameof(LMT03500UtilityUsageDTO.IBLOCK2_END)" HeaderText="@_localizer["LBL_BLOCK2END"]" Width="150px" Visible="@_visibleColumnEC"/>
                        <R_GridNumericColumn FieldName="@nameof(LMT03500UtilityUsageDTO.IBEBAN_BERSAMA)" HeaderText="@_localizer["LBL_BEBANBERSAMA"]" Width="150px" Visible="@_visibleColumnEC"/>
                        <R_GridNumericColumn FieldName="@nameof(LMT03500UtilityUsageDTO.IBLOCK1_USAGE)" HeaderText="@_localizer["LBL_BLOCK1USAGE"]" Width="150px" Visible="@_visibleColumnEC"/>
                        <R_GridNumericColumn FieldName="@nameof(LMT03500UtilityUsageDTO.IBLOCK2_USAGE)" HeaderText="@_localizer["LBL_BLOCK2USAGE"]" Width="150px" Visible="@_visibleColumnEC"/>
                        <R_GridNumericColumn FieldName="@nameof(LMT03500UtilityUsageDTO.IAVG_BLOCK1_USAGE)" HeaderText="@_localizer["LBL_AVGBLOCK1USAGE"]" Width="150px" Visible="@_visibleColumnEC"/>
                        <R_GridNumericColumn FieldName="@nameof(LMT03500UtilityUsageDTO.IAVG_BLOCK2_USAGE)" HeaderText="@_localizer["LBL_AVGBLOCK2USAGE"]" Width="160px" Visible="@_visibleColumnEC"/>
                            
                        <R_GridNumericColumn FieldName="@nameof(LMT03500UtilityUsageDTO.IMETER_START)" HeaderText="@_localizer["LBL_METERSTART"]" Width="150px" Visible="@_visibleColumnWG"/>
                        <R_GridNumericColumn FieldName="@nameof(LMT03500UtilityUsageDTO.IMETER_END)" HeaderText="@_localizer["LBL_METEREND"]" Width="150px" Visible="@_visibleColumnWG"/>
                        <R_GridNumericColumn FieldName="@nameof(LMT03500UtilityUsageDTO.IMETER_USAGE)" HeaderText="@_localizer["LBL_METERUSAGE"]" Width="150px" Visible="@_visibleColumnWG"/>
                        <R_GridNumericColumn FieldName="@nameof(LMT03500UtilityUsageDTO.IAVG_METER_USAGE)" HeaderText="@_localizer["LBL_AVGMETERUSAGE"]" Width="150px" Visible="@_visibleColumnWG"/>
                        <R_GridNumericColumn FieldName="@nameof(LMT03500UtilityUsageDTO.ITOTAL_AMOUNT)" HeaderText="@_localizer["LBL_TOTALAMOUNT"]" Width="150px" Visible="@_visibleColumnWG"/>
                        <R_GridTextColumn FieldName="@nameof(LMT03500UtilityUsageDTO.CSTATUS)" HeaderText="@_localizer["LBL_STATUS"]" TextAlignment="R_eTextAlignment.Left" Width="150px" Visible="@_visibleColumnWG"/>
                            
                        <R_GridTextColumn FieldName="@nameof(LMT03500UtilityUsageDTO.CUPDATE_BY)" HeaderText="@_localizer["LBL_UPDBY"]" TextAlignment="R_eTextAlignment.Left" Width="150px"/>
                        <R_GridDateTimePickerColumn FieldName="@nameof(LMT03500UtilityUsageDTO.DUPDATE_DATE)" HeaderText="@_localizer["LBL_UPDDT"]" Width="150px"/>
                        <R_GridTextColumn FieldName="@nameof(LMT03500UtilityUsageDTO.CCREATE_BY)" HeaderText="@_localizer["LBL_CRTBY"]" TextAlignment="R_eTextAlignment.Left" Width="150px"/>
                        <R_GridDateTimePickerColumn FieldName="@nameof(LMT03500UtilityUsageDTO.DCREATE_DATE)" HeaderText="@_localizer["LBL_CRTDT"]" Width="150px"/>
                    </R_GridColumns>
                </R_Grid>
                    
                <R_ConductorGrid @ref="@_conductorRefUtility"
                                 R_ConductorParent="_conductorRef"/>
            </R_ItemLayout>
        </R_StackLayout>
        
        <R_StackLayout Row Class="justify-content-between">
            <R_ItemLayout Class="@_display">
                <R_StackLayout Row>
                    <R_ItemLayout>
                        <R_Button Enabled="@(_viewModel.GridUtilityUsageList.Count != 0)" OnClick="DownloadTemplate">
                            @_localizer["LBL_DOWNLOAD"]
                        </R_Button>
                    </R_ItemLayout>
                    <R_ItemLayout>
                        <R_Button Enabled="@(_viewModel.GridUtilityUsageList.Count != 0)">
                            @_localizer["LBL_UPLOAD"]
                        </R_Button>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>
            <R_ItemLayout Class="@_display">
                <R_StackLayout Row>
                    <R_ItemLayout>
                        <R_Button Enabled="@(_viewModel.GridUtilityUsageList.Count != 0)">
                            @_localizer["LBL_CANCEL"]
                        </R_Button>
                    </R_ItemLayout>
                    <R_ItemLayout>
                        <R_Button Enabled="@(_viewModel.GridUtilityUsageList.Count != 0)">
                            @_localizer["LBL_SAVE"]
                        </R_Button>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>
        </R_StackLayout>
    </R_ItemLayout>
</R_StackLayout>
