@inherits R_Page

<R_StackLayout Row="true" Spacing="1">
    <R_ItemLayout xs="2">
        <R_Label>Transaction Code</R_Label>
    </R_ItemLayout>
    <R_ItemLayout xs="1">
        <R_TextBox Value="@_GSM05000NumberingViewModel.HeaderEntity.CTRANS_CODE"
                   Enabled="false" />
    </R_ItemLayout>
    <R_ItemLayout xs="3">
        <R_TextBox Value="@_GSM05000NumberingViewModel.HeaderEntity.CTRANSACTION_NAME"
                   Enabled="false" />
    </R_ItemLayout>

    <R_ItemLayout xs="2">
        <R_CheckBox Value="@_GSM05000NumberingViewModel.HeaderEntity.LDEPT_MODE"
                    Enabled="false" />
        <R_Label>By Department</R_Label>
    </R_ItemLayout>

    <R_ItemLayout>
        <R_Label>Period Mode</R_Label>
    </R_ItemLayout>

    <R_ItemLayout xs="2">
        <R_TextBox Value="@_GSM05000NumberingViewModel.HeaderEntity.CPERIOD_MODE_DESCR"
                   Enabled="false" />
    </R_ItemLayout>
</R_StackLayout>
<R_StackLayout>
    <R_ItemLayout col="12">
        <R_Grid @ref="@_gridRefNumbering"
                DataSource="@_GSM05000NumberingViewModel.GridList"
                Pageable="true"
                R_ConductorGridSource="@_conductorRefNumbering"
                R_GridType="@R_eGridType.Original"
                R_ServiceGetListRecord="@Grid_GetListNumbering"
                AllowDeleteRow="true"
                AllowEditRow="true"
                AllowAddNewRow="true"
                R_Before_Open_Grid_Lookup="BeforeLookupNumbering"
                R_After_Open_Grid_Lookup="AfterLookupNumbering"
                Width="100%"
                Height="420px">
            <R_GridColumns>
                <R_GridTextColumn FieldName="@nameof(GSM05000NumberingGridDTO.CPERIOD)" HeaderText="Period" Width="150px"/>
                <R_GridLookupColumn FieldName="@nameof(GSM05000NumberingGridDTO.CDEPT_CODE)" HeaderText="Department Code" R_EnableAdd="@_GSM05000NumberingViewModel.HeaderEntity.LDEPT_MODE" Enabled="@_GSM05000NumberingViewModel.HeaderEntity.LDEPT_MODE" Width="200px"/>
                <R_GridTextColumn FieldName="@nameof(GSM05000NumberingGridDTO.CDEPT_NAME)" HeaderText="Department Name" Width="250px"/>
                <R_GridNumericColumn FieldName="@nameof(GSM05000NumberingGridDTO.ISTART_NUMBER)" HeaderText="Starting No" R_EnableAdd R_EnableEdit Min="1" Max="1000" Step="1" Width="130px"/>
                <R_GridNumericColumn FieldName="@nameof(GSM05000NumberingGridDTO.ILAST_NUMBER)" HeaderText="Last No" Width="100px"/>
                <R_GridTextColumn FieldName="@nameof(GSM05000NumberingGridDTO.CUPDATE_BY)" HeaderText="Updated By" Width="150px"/>
                <R_GridTextColumn FieldName="@nameof(GSM05000NumberingGridDTO.DUPDATE_DATE)" HeaderText="Updated Date" Width="150px"/>
                <R_GridTextColumn FieldName="@nameof(GSM05000NumberingGridDTO.CCREATE_BY)" HeaderText="Created By" Width="150px"/>
                <R_GridTextColumn FieldName="@nameof(GSM05000NumberingGridDTO.DCREATE_DATE)" HeaderText="Created Date" Width="150px"/>
            </R_GridColumns>
        </R_Grid>
    </R_ItemLayout>
</R_StackLayout>
<R_ConductorGrid @ref="@_conductorRefNumbering"
                 R_ViewModel="@_GSM05000NumberingViewModel"
                 R_IsHeader
                 R_ServiceGetRecord="Grid_GetRecordNumbering"
                 R_AfterAdd="@Grid_AfterAddNumbering"
                 R_ServiceSave="Grid_ServiceSaveNumbering"
                 R_AfterSave="Grid_ServiceAfterSaveNumbering"
                 R_ServiceDelete="Grid_ServiceDeleteNumbering" />