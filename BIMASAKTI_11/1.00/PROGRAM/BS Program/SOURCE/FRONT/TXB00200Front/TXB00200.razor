@page "/TXB00200"
@using R_BlazorFrontEnd.Interfaces
@using TXB00200Common.DTOs
@using TXB00200FrontResources
@inherits R_Page
@inject R_ILocalizer<Resources_Dummy_Class> _localizer

<R_StackLayout Row Class="mb-1">
    <R_ItemLayout col="1">
        <R_Label FontColor="R_eFontColor.Danger">@_localizer["PROPERTY"]</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="2">
        <R_ComboBox Data="@_viewModel.PropertyList"
                    @bind-Value="@_viewModel.SelectedPropertyId"
                    ValueField="@nameof(TXB00200PropertyDTO.CPROPERTY_ID)"
                    TextField="@nameof(TXB00200PropertyDTO.CPROPERTY_NAME)"/>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row Class="mb-1">
    <R_ItemLayout col="1">
        <R_Label>@_localizer["TAX_PERIOD"]</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="1">
        <R_NumericTextBox @bind-Value="_viewModel.SelectedYear" ThousandSeparator="false" Step="1"/>
    </R_ItemLayout>
    <R_ItemLayout col="1">
        <R_ComboBox Data="_viewModel.PeriodList"
                    @bind-Value="_viewModel.SelectedPeriodNo"
                    ValueField="@nameof(TXB00200PeriodDTO.CPERIOD_NO)"
                    TextField="@nameof(TXB00200PeriodDTO.CPERIOD_NO)"/>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row Justify="R_eJustify.FlexStart" AlignItems="R_eAlignItems.End">
    <R_ItemLayout col="3" >
        <R_Button OnClick="OnClickProcess">@_localizer["PROCESS"]</R_Button>
    </R_ItemLayout>
</R_StackLayout>