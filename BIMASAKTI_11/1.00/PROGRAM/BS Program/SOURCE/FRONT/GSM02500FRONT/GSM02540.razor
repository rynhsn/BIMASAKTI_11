@inherits R_Page
@attribute [R_Page(Title = "Other Unit")]
@using GSM02500COMMON.DTOs.GSM02500;
@using GSM02500COMMON.DTOs;
@using GSM02500COMMON.DTOs.GSM02540;
@using GSM02500COMMON.DTOs.GSM02541;
@using GSM02500MODEL
@using GSM02500MODEL.View_Model;

<R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label Class="fw-bold" FontSize="15">@_localizer["_Property"]</R_Label>
        </R_ItemLayout>

        <R_ItemLayout col="3">
            <R_TextBox @bind-Value="@loUnitPromotionTypeViewModel.SelectedProperty.CPROPERTY_ID"
                       R_ConductorSource="@_conductorUnitPromotionTypeRef"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="7">
            <R_TextBox @bind-Value="@loUnitPromotionTypeViewModel.SelectedProperty.CPROPERTY_NAME"
                       R_ConductorSource="@_conductorUnitPromotionTypeRef"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>

<R_TabStrip OnActiveTabIndexChanging="OnActiveTabIndexChanging">
    <R_TabStripTab Title="@_localizer["_OtherUnitType"]" Id="UPT">

        <R_StackLayout Spacing="3" Row="true">

            @* Lay-Out Table Grid List *@
            <R_ItemLayout col="3">
                <R_Grid @ref="@_gridUnitPromotionTypeRef"
                        DataSource="@loUnitPromotionTypeViewModel.loUnitPromotionTypeList"
                        R_ConductorSource="@_conductorUnitPromotionTypeRef"
                        R_GridType="@R_eGridType.Navigator"
                        Height="330px"
                        R_ServiceGetListRecord="@Grid_R_ServiceGetUnitPromotionTypeListRecord">
                    <R_GridColumns>
                        <R_GridTextColumn FieldName="@nameof(GSM02540DTO.CUNIT_PROMOTION_TYPE_ID_NAME)" HeaderText="@_localizer["_OtherUnitType"]"></R_GridTextColumn>
                    </R_GridColumns>
                </R_Grid>
            </R_ItemLayout>
            @* Lay-Out Navigator *@
            <R_ItemLayout col="8">

                <R_StackLayout Row="true" Class="justify-content-end">
                    <R_ItemLayout col="1">
                        <R_CheckBox @bind-Value="@loUnitPromotionTypeViewModel.Data.LACTIVE"
                                    R_ConductorSource="@_conductorUnitPromotionTypeRef"
                                    Enabled="false">
                        </R_CheckBox>
                        <R_Label>@_localizer["_Active"]</R_Label>
                    </R_ItemLayout>
                </R_StackLayout>

                <R_StackLayout Row="true">
                    <R_ItemLayout col="2">
                        <R_Label>@_localizer["_OtherUnitType"]*</R_Label>
                    </R_ItemLayout>

                    <R_ItemLayout col="3">
                        <R_TextBox @bind-Value="@loUnitPromotionTypeViewModel.Data.CUNIT_PROMOTION_TYPE_ID"
                                   @ref="@UnitPromotionTypeIdRef"
                                   R_ConductorSource="@_conductorUnitPromotionTypeRef"
                                   R_EnableAdd="true"
                                   R_EnableEdit="false">
                        </R_TextBox>
                    </R_ItemLayout>
                    <R_ItemLayout col="7">
                        <R_TextBox @bind-Value="@loUnitPromotionTypeViewModel.Data.CUNIT_PROMOTION_TYPE_NAME"
                                   @ref="@UnitPromotionTypeNameRef"
                                   R_ConductorSource="@_conductorUnitPromotionTypeRef"
                                   R_EnableAdd="true"
                                   R_EnableEdit="true">
                        </R_TextBox>
                    </R_ItemLayout>
                </R_StackLayout>

                <R_StackLayout Row="true">
                    <R_ItemLayout col="2">
                        <R_Label>@_localizer["_Description"]</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="10">
                        <R_TextArea @bind-Value="@loUnitPromotionTypeViewModel.Data.CDESCRIPTION"
                                    R_ConductorSource="@_conductorUnitPromotionTypeRef"
                                    R_EnableAdd="true" R_EnableEdit="true"></R_TextArea>
                    </R_ItemLayout>
                </R_StackLayout>

                <R_StackLayout Row="true" Class="mt-2">
                    <R_Label FontColor="R_eFontColor.Danger" FontStyle="R_eFontStyle.Bold" FontSize="15px">@_localizer["_DefaultSize"]</R_Label>
                </R_StackLayout>

                <R_StackLayout Row="true">
                    <R_ItemLayout col="2">
                        <R_Label>@_localizer["_GrossAreaSize"]*</R_Label>
                    </R_ItemLayout>

                    <R_ItemLayout col="3">
                        <R_NumericTextBox @bind-Value="@loUnitPromotionTypeViewModel.Data.NGROSS_AREA_SIZE"
                                          R_ConductorSource="@_conductorUnitPromotionTypeRef"
                                          R_EnableAdd="true" R_EnableEdit="true">
                        </R_NumericTextBox>
                    </R_ItemLayout>
                    <R_ItemLayout col="1">
                        <R_Label FontStyle="R_eFontStyle.Italic">@lcCUOMLabel</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="2">
                        <R_Label>@_localizer["_NetAreaSize"]*</R_Label>
                    </R_ItemLayout>

                    <R_ItemLayout col="3">
                        <R_NumericTextBox @bind-Value="@loUnitPromotionTypeViewModel.Data.NNET_AREA_SIZE"
                                          R_ConductorSource="@_conductorUnitPromotionTypeRef"
                                          R_EnableAdd="true" R_EnableEdit="true">
                        </R_NumericTextBox>
                    </R_ItemLayout>
                    <R_Label FontStyle="R_eFontStyle.Italic">@lcCUOMLabel</R_Label>
                </R_StackLayout>

                <R_StackLayout Row="true">
                    <R_ItemLayout col="2">
                        <R_Label>@_localizer["_UpdatedBy"]</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="4">
                        <R_TextBox @bind-Value="@loUnitPromotionTypeViewModel.Data.CUPDATE_BY"
                                   R_ConductorSource="@_conductorUnitPromotionTypeRef"
                                   Enabled="false"></R_TextBox>
                    </R_ItemLayout>
                    <R_ItemLayout col="1">
                        <R_Label>@_localizer["_Date"]</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="1">
                    </R_ItemLayout>
                    <R_ItemLayout col="4">
                        <R_DateTimePicker @bind-Value="@loUnitPromotionTypeViewModel.Data.DUPDATE_DATE"
                                          R_ConductorSource="@_conductorUnitPromotionTypeRef"
                                          Enabled="false"></R_DateTimePicker>
                    </R_ItemLayout>
                </R_StackLayout>

                <R_StackLayout Row="true">
                    <R_ItemLayout col="2">
                        <R_Label>@_localizer["_CreatedBy"]</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="4">
                        <R_TextBox @bind-Value="@loUnitPromotionTypeViewModel.Data.CCREATE_BY"
                                   R_ConductorSource="@_conductorUnitPromotionTypeRef"
                                   Enabled="false"></R_TextBox>
                    </R_ItemLayout>
                    <R_ItemLayout col="1">
                        <R_Label>@_localizer["_Date"]</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="1">
                    </R_ItemLayout>
                    <R_ItemLayout col="4">
                        <R_DateTimePicker @bind-Value="@loUnitPromotionTypeViewModel.Data.DCREATE_DATE"
                                          R_ConductorSource="@_conductorUnitPromotionTypeRef"
                                          Enabled="false"></R_DateTimePicker>
                    </R_ItemLayout>
                </R_StackLayout>

            </R_ItemLayout>

        </R_StackLayout>


        <R_StackLayout Row Class="justify-content-between">
            <R_ItemLayout>
                <R_AddButton R_Conductor="@_conductorUnitPromotionTypeRef"></R_AddButton>
                <R_EditButton R_Conductor="@_conductorUnitPromotionTypeRef"></R_EditButton>
                <R_DeleteButton R_Conductor="@_conductorUnitPromotionTypeRef"></R_DeleteButton>
            </R_ItemLayout>
            <R_ItemLayout>
                <R_Button R_ConductorSource="@_conductorUnitPromotionTypeRef"
                          R_EnableOther
                          OnClick="OnClickTemplate">@_localizer["_Template"]</R_Button>
                <R_Popup R_ConductorSource="@_conductorUnitPromotionTypeRef"
                         R_EnableOther
                         R_Before_Open_Popup="Before_Open_Upload_Popup"
                         R_After_Open_Popup="After_Open_Upload_Popup">@_localizer["_Upload"]</R_Popup>
                <R_Popup R_ConductorSource="@_conductorUnitPromotionTypeRef"
                         R_Before_Open_Popup="@R_Before_Open_Popup_ActivateInactiveUnitPromotionType"
                         R_After_Open_Popup="@R_After_Open_Popup_ActivateInactiveUnitPromotionType"
                         R_EnableOther>@loUnitPromotionTypeLabel</R_Popup>
            </R_ItemLayout>
            <R_ItemLayout>
                <R_CancelButton R_Conductor="@_conductorUnitPromotionTypeRef"></R_CancelButton>
                <R_SaveButton R_Conductor="@_conductorUnitPromotionTypeRef"></R_SaveButton>
            </R_ItemLayout>
        </R_StackLayout>

    </R_TabStripTab>
    <R_TabStripTab Title="@_localizer["_OtherUnit"]" Id="UP" Enabled="@IsUnitPromotionTypeListExist">
        <R_TabPage R_Before_Open_TabPage="R_Before_OpenUnitPromotion_TabPage" R_TabEventCallback="@R_TabEventCallback">
            <GSM02541></GSM02541>
        </R_TabPage>
    </R_TabStripTab>
</R_TabStrip>

<R_Conductor @ref="@_conductorUnitPromotionTypeRef"
             R_ViewModel="@loUnitPromotionTypeViewModel"
             R_ServiceSave="@Grid_ServiceSaveUnitPromotionType"
             R_Saving="Grid_SavingUnitPromotionType"
             R_Display="Grid_DisplayUnitPromotionType"
             R_ServiceDelete="@Grid_ServiceDeleteUnitPromotionType"
             R_AfterDelete="Grid_AfterDeleteUnitPromotionType"
             R_Validation="Grid_ValidationUnitPromotionType"
             R_AfterAdd="@Grid_AfterAddUnitPromotionType"
             R_ConvertToGridEntity="Grid_ConvertToGridEntityUnitPromotionType"
             R_AfterSave="@Grid_AfterSaveUnitPromotionType"
             R_IsHeader="true"
             R_ServiceGetRecord="@Grid_ServiceGetUnitPromotionTypeRecord">
</R_Conductor>


